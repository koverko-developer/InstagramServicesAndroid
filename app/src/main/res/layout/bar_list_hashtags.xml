<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp">

        <android.support.v7.widget.CardView
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    app:srcCompat="@drawable/ic_arrow_back_black_24dp" />



                <TextView
                    android:id="@+id/title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/ln"
                    android:layout_toRightOf="@+id/img_menu"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/ln"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/fab_language"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:layout_toLeftOf="@+id/fap_copy"
                        android:background="@drawable/fab_circle_border">

                        <TextView
                            android:id="@+id/text_language"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerInParent="true"
                            android:text="RU"
                            android:textColor="@color/cardview_light_background" />

                    </RelativeLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="false"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:alpha="0.8"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/accent_text"
                        app:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tv_count_copie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingRight="8dp"
                                android:text="1"
                                android:textColor="@color/cardview_light_background"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/img_xx"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="false"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/tv_count_copie"
                                app:srcCompat="@drawable/ic_content_copy_black_24dp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>





            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar">


        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>